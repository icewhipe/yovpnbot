# YoVPN Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ================================
# REQUIRED VARIABLES
# ================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz1234567890

# Security
SECRET_KEY=your-secret-key-min-32-characters-long-generated-with-secrets

# Marzban API Configuration
MARZBAN_API_URL=https://your-marzban-server.com

# Marzban Authentication (Option 1: Admin Token)
MARZBAN_ADMIN_TOKEN=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Marzban Authentication (Option 2: Username/Password)
# Use this if you don't have an admin token
# MARZBAN_USERNAME=admin
# MARZBAN_PASSWORD=your-password

# ================================
# OPTIONAL VARIABLES
# ================================

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_MAX_CONNECTIONS=50
REDIS_POOL_TIMEOUT=20

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-webapp.up.railway.app

# Cache TTL Settings (seconds)
CACHE_TTL_SUBSCRIPTION=300
CACHE_TTL_USER=600
CACHE_TTL_MARZBAN_TOKEN=3600

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
MARZBAN_CONNECTION_POOL_SIZE=10
MARZBAN_TIMEOUT=30

# Download URLs for v2raytun clients
ANDROID_APK_URL=https://github.com/yovpn/v2raytun/releases/latest/download/v2raytun-android.apk
IOS_APP_STORE_URL=https://apps.apple.com/app/v2raytun
MACOS_DMG_URL=https://github.com/yovpn/v2raytun/releases/latest/download/v2raytun-macos.dmg
WINDOWS_EXE_URL=https://github.com/yovpn/v2raytun/releases/latest/download/v2raytun-windows.exe
ANDROID_TV_APK_URL=https://github.com/yovpn/v2raytun/releases/latest/download/v2raytun-tv.apk

# Next.js WebApp Configuration (for webapp service)
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
NEXT_PUBLIC_TELEGRAM_BOT_TOKEN=${TELEGRAM_BOT_TOKEN}
NEXT_PUBLIC_API_BASE_URL=https://your-api.up.railway.app
NEXT_PUBLIC_BASE_URL=https://your-webapp.up.railway.app
NEXT_PUBLIC_DEV_MODE=false
NEXT_PUBLIC_ANDROID_APK_URL=${ANDROID_APK_URL}
NEXT_PUBLIC_IOS_APP_STORE_URL=${IOS_APP_STORE_URL}
NEXT_PUBLIC_MACOS_DMG_URL=${MACOS_DMG_URL}
NEXT_PUBLIC_WINDOWS_EXE_URL=${WINDOWS_EXE_URL}
NEXT_PUBLIC_ANDROID_TV_APK_URL=${ANDROID_TV_APK_URL}

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=0
LOG_FILE=/tmp/bot.log

# Python Optimization
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# ================================
# DEVELOPMENT ONLY
# ================================

# Enable debug mode (development only)
# DEBUG=true

# Database URL (SQLite for development)
# SQLALCHEMY_DATABASE_URL=sqlite:///data/bot.db

# ================================
# NOTES
# ================================

# 1. Never commit this file with real values to git
# 2. Generate SECRET_KEY with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
# 3. Get TELEGRAM_BOT_TOKEN from @BotFather
# 4. Either MARZBAN_ADMIN_TOKEN or (MARZBAN_USERNAME + MARZBAN_PASSWORD) must be set
# 5. Update URLs after deploying to Railway
# 6. For production, use strong passwords and keep secrets secure
