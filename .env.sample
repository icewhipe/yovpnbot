# YoVPN Bot Configuration
# Скопируйте этот файл в .env и заполните реальными значениями

# =============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ БОТА
# =============================================================================

# Telegram Bot Token (получить у @BotFather)
USERBOT_TOKEN=your_bot_token_here

# Имя бота (опционально)
BOT_USERNAME=YoVPNBot

# Описание бота (опционально)
BOT_DESCRIPTION=Современный VPN-бот с ежедневной оплатой

# =============================================================================
# НАСТРОЙКИ MARZBAN
# =============================================================================

# URL API Marzban
MARZBAN_API_URL=https://your-marzban-domain.com/api

# Токен администратора Marzban
MARZBAN_ADMIN_TOKEN=your_marzban_admin_token_here

# =============================================================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# =============================================================================

# Файл базы данных (SQLite)
DATA_FILE=data.json

# URL базы данных (опционально, для PostgreSQL/MySQL)
DATABASE_URL=

# =============================================================================
# НАСТРОЙКИ ЛОГИРОВАНИЯ
# =============================================================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Файл логов
LOG_FILE=bot.log

# Формат логов
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# =============================================================================

# Секретный ключ для подписи данных
SECRET_KEY=your-super-secret-key-here

# Ограничение запросов (запросов в минуту)
RATE_LIMIT_RPM=60

# Ограничение запросов (запросов в час)
RATE_LIMIT_RPH=1000

# =============================================================================
# НАСТРОЙКИ МОНИТОРИНГА
# =============================================================================

# Sentry DSN для отслеживания ошибок
SENTRY_DSN=

# Порт для Prometheus метрик
PROMETHEUS_PORT=8000

# Порт для health check
HEALTH_CHECK_PORT=8080

# =============================================================================
# НАСТРОЙКИ REDIS
# =============================================================================

# URL Redis сервера
REDIS_URL=redis://localhost:6379

# Пароль Redis (если требуется)
REDIS_PASSWORD=

# =============================================================================
# НАСТРОЙКИ ПЛАТЕЖЕЙ
# =============================================================================

# Стоимость дня подписки (в рублях)
DAILY_COST=4.0

# Минимальный баланс для предупреждения (в рублях)
MIN_BALANCE_WARNING=8.0

# URL для webhook платежей
PAYMENT_WEBHOOK_URL=

# =============================================================================
# НАСТРОЙКИ УВЕДОМЛЕНИЙ
# =============================================================================

# ID администратора в Telegram
ADMIN_TELEGRAM_ID=

# Включить уведомления
NOTIFICATION_ENABLED=true

# Интервал проверки уведомлений (в часах)
NOTIFICATION_INTERVAL=6

# =============================================================================
# НАСТРОЙКИ UI
# =============================================================================

# Язык по умолчанию
DEFAULT_LANGUAGE=ru

# Часовой пояс
TIMEZONE=Europe/Moscow

# =============================================================================
# НАСТРОЙКИ РАЗРАБОТКИ
# =============================================================================

# Режим отладки
DEBUG=false

# Режим разработки
DEVELOPMENT=false

# =============================================================================
# НАСТРОЙКИ API
# =============================================================================

# Хост для API
API_HOST=0.0.0.0

# Порт для API
API_PORT=8000

# Префикс API
API_PREFIX=/api/v1

# =============================================================================
# НАСТРОЙКИ ФАЙЛОВ
# =============================================================================

# Директория для загрузок
UPLOAD_DIR=uploads

# Директория для временных файлов
TEMP_DIR=temp

# Максимальный размер файла (в байтах)
MAX_FILE_SIZE=10485760